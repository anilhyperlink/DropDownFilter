<!-- container -->
<div class="container">
    <div class="row">
        <div class="card-box">
            <h4 class="m-t-0 header-title">
                <b>Create a list of contacts who</b>
            </h4>

            <form id="DropDownForm">
                <input type="hidden" id="PageNo" name="PageNumber" value="1" />

                <div class="row m-b-30">
                    <div class="col-md-11">
                        <select class="form-control" id="itemDropdown">
                            <option value="has photo on profile">has photo on profile</option>
                            <option value="has created a account within __ days">has created a account within __ days</option>
                            <option value="has not created a account within __ days">has not created a account within __ days</option>
                            <option value="email address contains __">email address contains __</option>
                            <option value="email address not contains __">email address not contains __</option>
                            <option value="first name contains __">first name contains __</option>
                            <option value="first name not contains __">first name not contains __</option>
                            <option value="last name contains __">last name contains __</option>
                            <option value="last name not contains __">last name not contains __</option>
                        </select>
                    </div>
                    <div class="col-md-1">
                        <span>
                            <button class="btn btn-block btn-primary" type="button" id="addItemButton"> Add </button>
                        </span>
                    </div>
                </div>

                <div class="row m-b-30">
                    <div class="col-md-12">
                        <table class="table table-striped table-hover toggle-circle" id="todoList">
                            <thead>
                                <tr>
                                    <th><b>Action</b></th>
                                    <th><b>Criteria</b></th>
                                    <th class="text-right"><b>Parameter</b></th>
                                </tr>
                            </thead>
                            <tbody>
                                <!--  Add selected item to the to-do list -->
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="row">
                    <span style="float: right">
                        <button class="btn btn-primary" type="button" onclick="SearchQuery(1)"> Search </button>
                    </span>
                </div>

            </form>

        </div>
        <!-- user list -->
        <div class="card-box" id="UserFilterListPartial">
            @await Html.PartialAsync("_UserFilterList",ViewData["UserList"])
        </div>

    </div>
</div>
<!-- /container -->

<script src="~/assets/js/jquery.min.js"></script>
<script src="~/js/filter.js"></script>